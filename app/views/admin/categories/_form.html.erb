<%= form_with(model: category, url:, class: "contents") do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul class="list-disc ml-6">
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :section_id, "Section" %>
    <%= form.collection_select(:section_id, Section.all, :id, :name, { prompt: "Select a section" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:section_id].none?, "border-red-400 focus:outline-red-600": category.errors[:section_id].any?}]) %>
  </div>

  <div class="my-5">
    <%= form.label :status, "Status" %>
    <%= form.select(:status, Category.statuses.keys.map { |s| [s.humanize.capitalize, s] }, { prompt: "Select a status" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:status].none?, "border-red-400 focus:outline-red-600": category.errors[:status].any?}]) %>
  </div>

  <div>
    <%= form.label :underlined_name, "Underlined Name" %>
    <%= form.check_box :underlined_name %>
  </div>

  <div class="my-5">
    <%= icon_tag(category, zoom: 200, class: "bg-gray-300 p-1 rounded") %>
    <%= form.label :icon %>
    <%= form.file_field :icon %>
  </div>

  <div class="my-5">
    <%= form.label :icon_height %>
    <%= form.number_field :icon_height, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:icon_height].none?, "border-red-400 focus:outline-red-600": category.errors[:icon_height].any?}] %>
  </div>

  <% unless category.new_record? %>
    <div class="my-5">
      <%= form.label :position %>
      <%= form.number_field :position, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:position].none?, "border-red-400 focus:outline-red-600": category.errors[:position].any?}] %>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": category.errors[:name].none?, "border-red-400 focus:outline-red-600": category.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.rich_textarea :description %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
