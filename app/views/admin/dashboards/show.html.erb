  <% end %>

  <div class="flex justify-between items-center">
    <%= link_to "Categories", admin_categories_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "Articles", admin_articles_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
</div>
