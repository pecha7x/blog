<div class="hs-accordion-heading py-0.5 flex items-center gap-x-0.5 w-full">
  <button aria-controls="hs-collapse-<%= accordion_id %>" aria-expanded="<%= expanded %>" class="hs-accordion-toggle cursor-pointer size-6 flex justify-center items-center hover:bg-gray-300 rounded-md disabled:opacity-50 disabled:pointer-events-none">
    <svg class="size-4 text-gray-800" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M5 12h14"></path>
      <path class="hs-accordion-active:hidden block" d="M12 5v14"></path>
    </svg>
  </button>

  <% klass_item = "grow" %>
  <% if item[:link].present? %>
    <% klass_item += "cursor-pointer" %>
  <% end %>

  <div class="<%= klass_item %>">
    <div class="flex items-center gap-x-3">
      <!-- 
      <svg class="shrink-0 size-4 text-gray-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"></path>
      </svg>
      -->
      <div class="grow">
        <%= render 'shared/tree/accordion/node', item: %>
      </div>
    </div>
  </div>
</div>
