<% button_class = "rounded-md px-3 py-2 text-lg font-medium text-gray-300 hover:bg-white/5 hover:text-white cursor-pointer" %>
<%# aria-current="page" if active %>

<% if section.categories.blank? %>
  <button class="<%= button_class %>"><%= section.name %></button>
<% else %>
  <el-dropdown class="relative">
    <button class="<%= button_class %>"><%= section.name %></button>

    <el-menu anchor="bottom end" popover class="m-0 w-48 origin-top-right bg-gray-600 p-0 py-1 shadow-lg outline outline-1 outline-black/5 transition [--anchor-gap:theme(spacing.2)] [transition-behavior:allow-discrete] data-[closed]:scale-95 data-[closed]:transform data-[closed]:opacity-0 data-[enter]:duration-100 data-[leave]:duration-75 data-[enter]:ease-out data-[leave]:ease-in">
      <% section.categories.each do |category| %>
        <%= link_to category_path(category), class: "group" do %>
          <div class="flex flex-row gap-2 items-center px-4 py-2 group-hover:bg-white/5">
            <%= icon_tag(category) %>
            <span class="text-md text-gray-300 group-hover:text-white"><%= category.name %></span>
          </div>
        <% end %>  
      <% end %>
    </el-menu>
  </el-dropdown>
<% end %>
