<% content_for :title, "Articles" %>

<div class="w-full">
  <div id="articles" class="min-w-full divide-y divide-gray-200 space-y-5 pl-10 pt-5 pb-5">
    <ol class="list-decimal">
      <% @articles.each do |article| %>
        <li><%= link_to article.title, category_article_path(@category, article), class: "text-center inline-block font-medium text-lg text-indigo-700" %></li>
      <% end %>
    </ol>
  </div>
</div>
