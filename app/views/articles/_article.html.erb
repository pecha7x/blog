<div id="<%= dom_id article %>" class="w-full sm:w-auto my-3 space-y-5 pb-25">
  <% @article_parents.each do |parent| %>
    <%= link_to parent[:title], parent[:link], class: "text-sm text-indigo-700 font-semibold hover:font-bold" %> /
  <% end %>
  <h1 class="font-bold text-2xl">
    <%= article.title %>
  </h1>

  <div>
    <%= article.content %>
  </div>
</div>
